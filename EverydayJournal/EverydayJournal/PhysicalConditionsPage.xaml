<Page x:Class="EverydayJournal.PhysicalConditionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EverydayJournal"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="500"
      Title="PhysicalConditionsPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--Title-->
        <Label Grid.Row="0" Style="{StaticResource titleHeaderStyle}">Physical Conditions</Label>
        
        <Label Grid.Row="1" Style="{StaticResource labelsUserMenu}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30">Physical Condition</Label>   
        <TextBox x:Name="PhysicalConditionTextBox" Grid.Row="1" Style="{StaticResource profileTextBoxStyle}"></TextBox>
        <Button Grid.Row="2" Style="{StaticResource buttonGeneralStyle}" Click="Button_Click">Save changes</Button>
        <!--Background-->
        <Grid.Background>
            <ImageBrush ImageSource="Images/background.jpg"/>
        </Grid.Background>
    </Grid>
</Page>
